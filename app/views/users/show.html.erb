<div class="wrapper">
  <div id="profilePhoto">
    <% if @photo %>
      <%= link_to image_tag(@photo.image.url, class: 'media-object'), @photo.image.url, class: 'profile-photo', target: '_blank' %>
    <% else %>
      <%= image_tag("dcflag_heart.png", :alt => "Profile Photo", class: 'defaultPhoto') %>
    <% end %>
    <p class="underPhoto"><%= @user[:age] %> yrs | <%= @user[:gender] %></p>
    <p class="underPhoto">Joined DsCene: <%= @user[:created_at] %></p>
  </div>
  <div id="profileInfo">
    <div id="userName">
      <h3><%= @user[:fullname] %></h3>
    </div>
    <% if @user[:country] %>
      <h4>From</h4><p> <%= @user[:country] %><p>
    <% end %>
    <% if @user[:us_state] != "Not Applicable" %>
      <p>From <%= @user[:us_state] %><p>
    <% end %>
    <% primaryLang = Language.find(@user[:primary_lang_id]) %>
    <% secondLang = Language.find(@user[:secondary_lang_id]) %>
    <h4>Speaks</h4><p> <%= primaryLang[:language] %>
    <% if secondLang[:language] != "Not Applicable" %>
      &amp; <%= secondLang[:language] %><p>
    <% end %>
    <h4>About Me</h4>
    <p><%= @user[:bio] %></p>
      <% if @hobby %>
        <p>Likes reading.. <%= @hobby[:reading] %></p>
        <p>Favorite sport(s): <%= @hobby[:gym] %></p>
        <p>Watches.. <%= @hobby[:movie] %></p>
        <p>Listens to.. <%= @hobby[:dancing] %></p>
        <p>Favorite outdoor activity: <%= @hobby[:outside] %></p>
        <p>Enjoy eating.. <%= @hobby[:food] %></p>
        <p>Drink of choice is.. <%= @hobby[:drinks] %></p>
        <p>So far, my favorite museum in DC is.. <%= @hobby[:museums] %></p>
      <% end %>
  </div>
</div>
<br>
<div class="otherLinks">
  <% if @user[:id] == current_user[:id] %>
    <%= link_to 'Add Interests', new_hobby_path, class: 'linkButton' %> ||
    <%= link_to 'Update Profile Photo', new_photo_path, class: 'linkButton' %> ||
    <%= link_to 'Edit Profile', edit_user_registration_path, class: 'linkButton' %> ||
    <%= link_to 'Delete Account', user_registration_path, method: :delete, data: { confirm: 'Are you sure?' }, class: 'linkButton' %></td>
  <% end %>
</div>
<br>
